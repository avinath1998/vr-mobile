ion-view(view-title='Settings')
  ion-nav-buttons(side='left')
    button.button.button-icon.icon.ion-log-out.button-clear.button-light(ng-click='logOut()')
  ion-content(on-swipe-right='onSwipedRight()', on-swipe-left='onSwipedLeft()')
    ion-list

      ion-item.item-icon-right
        div Remaining Talk Credits: {{user.credits}}
        i.icon.ion-android-refresh(ng-click='refreshCredits()')

      ion-item.item-toggle
        span Download content only when on a Wifi
        label.toggle.toogle-calm
          input(type='checkbox'
                ng-click='toggleDownloadOption()'
                ng-checked='limitDownloadToWifi')
          .track
            .handle


